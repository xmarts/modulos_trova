<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_category_form_view_inherit_commission" model="ir.ui.view">
        <field name="name">product.category.form.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <group name="first" position="after"> 
                <group name="Sales Commission">
                    <field name="sales_manager_commission" attrs="{'invisible': [('is_apply', '!=', True)]}"/>
                    <field name="sales_person_commission" attrs="{'invisible': [('is_apply', '!=', True)]}"/>
                    <field name="is_apply" invisible="1"/>
                </group>
             </group>
        </field>
    </record>

    <menuitem id="menu_product_in_config_sale_commission" name="Products" parent="sale.menu_sale_config" sequence="4"/>
    <menuitem
        action="product.product_category_action_form" id="menu_product_category_config_sale_commission"
        parent="menu_product_in_config_sale_commission" sequence="2"/>
</odoo>
